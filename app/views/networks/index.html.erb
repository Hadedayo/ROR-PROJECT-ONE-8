<div class="container">
  <link rel="stylesheet" href="/indexNetwork.css">


    <p id="notice"><%= notice %></p>
    <br><br>

    <div class="container">
      <h1>Mobile Networks</h1>

      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Coverage</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @networks.each do |network| %>
              <tr >
                <td class="info"><%= network.name %></td>
                <td class="warning"><%= network.coverage %></td>
                <td><%= link_to 'Show', network, :class => 'btn btn-success' %></td>
                <td><%= link_to 'Edit', edit_network_path(network), :class => 'btn btn-primary' %></td>
                <td><%= link_to 'Destroy', network, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <br>
      <div type="button" class="btn btn-warning">
        <%= link_to 'New Network', new_network_path %>
      </div>

    </div>

  </div>
