    <%= form.label :last_name %>
    <input type="text" onfocus="myFunction(this)">
  </div>

  <div class="field">
    <%= form.label :age %>
    <input type="text" onfocus="myFunction(this)">
  </div>

  <div class="field">
    <%= form.label :network_id %>
    <input type="text" onfocus="myFunction(this)">
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
  <script>
  function myFunction(x) {
      x.style.background = "lightblue";
  }
  </script>
