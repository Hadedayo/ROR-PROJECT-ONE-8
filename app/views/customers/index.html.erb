<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>Customers</h1>
  <br><br><br>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Age</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td class="info"><%= customer.first_name %></td>
            <td class="warning"><%= customer.last_name %></td>
            <td class="info"><%= customer.age %></td>
            <td><%= link_to 'Show', customer %></td>
            <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
            <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn-group btn-group-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

    <div type="button" class="btn btn-secondary">
          <%= link_to 'New Customer', new_customer_path %>
    </div>
</div>
